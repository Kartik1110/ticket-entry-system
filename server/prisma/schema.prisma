generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Agent {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   @unique()
  email       String   @unique()
  phone       String
  description String
  active      Boolean  @default(true)
  dateCreated DateTime @default(now())
  tickets     Ticket[]
}

model Ticket {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  topic       String
  description String
  dateCreated DateTime @default(now())
  severity    String
  type        String
  assignedTo  String
  agentName   Agent    @relation(fields: [assignedTo], references: [name])
  status      String
  resolvedOn  DateTime
}
